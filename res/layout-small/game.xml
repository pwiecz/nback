<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<cz.wie.p.nback.BoardView android:id="@+id/nbackview"
		android:layout_width="wrap_content" android:layout_height="0px"
		android:layout_weight="1" />
	<LinearLayout android:id="@+id/buttons" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:id="@+id/right" android:layout_width="0px"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:text="" />
		<TextView android:id="@+id/wrong" android:layout_width="0px"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:text="" />
	</LinearLayout>
</LinearLayout>
